{
  "compilerOptions": {
    // These options only works on .ts files not .d.ts files
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "declaration": false,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": false,
    "moduleResolution": "bundler",
    "lib": ["es2022"],
    "target": "es2022",
    "module": "Preserve",
    "typeRoots": ["./node_modules/@types"],
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "./lib/",
    "./lint/",
    "./test/",
    "./demo/",
    "doc/design/state-write.d.ts",
    "doc/design/state-write.mjs"
  ],
  "exclude": [
    "./test/262/main/record/",
    "./test/262/test262/",
    "./demo/target.mjs",
    "./demo/trace-template.mjs",
    "./demo/worker.mjs",
    "./demo/index.mjs"
  ]
}
