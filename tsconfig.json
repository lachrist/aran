{
  "compilerOptions": {
    // JS //
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": false,
    // Strict //
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    // Target //
    "lib": ["es2023"],
    "target": "es2023",
    // Module //
    "resolveJsonModule": false,
    "resolvePackageJsonImports": true,
    "resolvePackageJsonExports": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "aran": ["./lib/index.d.ts"],
      "aran/runtime": ["./lib/runtime/index.d.ts"]
    }
  },
  "include": [
    "./lib/",
    "./lint/",
    "./test/",
    "./doc/design/state-write.d.ts",
    "./doc/design/state-write.mjs"
  ],
  "exclude": ["./test/262/main/record/"]
}
